{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@screens/*": ["./src/screens/*"],
      "@routes/*": ["./src/routes/*"],
      "@theme/*": ["./src/theme/*"],
      "@context/*": ["./src/context/*"],
      "@dtos/*": ["./src/dtos/*"],
      "@service/*": ["./src/service/*"],
      "@utils/*": ["./src/utils/*"],
      "@storage/*": ["./src/storage/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  }
}
